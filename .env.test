# Test Environment Configuration
NODE_ENV=test
LOG_LEVEL=error

# Test Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/footanalytics_test
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/footanalytics_test

# Redis Configuration for Tests
REDIS_URL=redis://localhost:6380/1
TEST_REDIS_URL=redis://localhost:6380/1

# Disable external services in tests
DISABLE_EXTERNAL_SERVICES=true
MOCK_EXTERNAL_APIS=true

# Test-specific settings
DISABLE_RATE_LIMITING=true
DISABLE_AUTH=false
ENABLE_TEST_ROUTES=true

# JWT Configuration for tests
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# AWS/S3 Mock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_S3_BUCKET=test-bucket
AWS_S3_ENDPOINT=http://localhost:9000
AWS_S3_FORCE_PATH_STYLE=true

# GraphQL Configuration
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true

# Monitoring (disabled in tests)
METRICS_ENABLED=false
TRACING_ENABLED=false

# Cache Configuration
CACHE_DEFAULT_TTL=60
