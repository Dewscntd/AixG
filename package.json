{
  "name": "footanalytics-platform",
  "version": "1.0.0",
  "description": "AI-powered video analysis platform for Israeli football clubs - Complete Platform",
  "main": "dist/src/api-gateway/index.js",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/src/api-gateway/index.js",
    "start:dev": "ts-node src/api-gateway/index.ts",
    "start:debug": "ts-node --inspect src/api-gateway/index.ts",
    "start:video-ingestion": "ts-node src/video-ingestion-service/index.ts",
    "start:analytics": "ts-node src/analytics-engine-service/index.ts",
    "start:frontend": "cd frontend && npm run dev",
    "start:frontend:prod": "cd frontend && npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":90,\"functions\":90,\"lines\":90,\"statements\":90}}'",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:contract": "jest --testPathPattern=contract",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:performance": "artillery run test/performance/load-test.yml",
    "test:load": "k6 run test/performance/stress-test.js",
    "test:chaos": "npm run test:chaos:network && npm run test:chaos:cpu && npm run test:chaos:memory",
    "test:chaos:network": "litmus chaos run test/chaos/network-chaos.yaml",
    "test:chaos:cpu": "litmus chaos run test/chaos/cpu-chaos.yaml",
    "test:chaos:memory": "litmus chaos run test/chaos/memory-chaos.yaml",
    "test:chaos:wait": "node scripts/wait-for-chaos.js",
    "test:stress": "k6 run test/performance/stress-test.js",
    "test:smoke:staging": "jest --testPathPattern=smoke --testNamePattern=staging",
    "pact:publish": "npx pact-broker publish ./pacts --consumer-app-version=$GITHUB_SHA --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "test:property": "jest --testPathPattern=property",
    "test:snapshot": "jest --testPathPattern=snapshot",
    "test:security": "npm audit && npm run test:security:deps",
    "test:security:deps": "snyk test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contract && npm run test:e2e",
    "test:ci": "npm run test:all && npm run test:performance && npm run test:security",
    "test:frontend": "cd frontend && npm run test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && cd frontend && npm run lint",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" && cd frontend && npm run format",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && cd frontend && npm run format:check",
    "type-check": "tsc --noEmit && cd frontend && npm run type-check",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:test": "DATABASE_URL=$DATABASE_URL npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "wait-for-services": "node scripts/wait-for-services.js",
    "docker:build": "docker build -t footanalytics-platform .",
    "docker:run": "docker run -p 4000:4000 footanalytics-platform",
    "codegen": "graphql-codegen --config codegen.yml",
    "setup:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run start:dev\" \"npm run start:frontend\"",
    "build:all": "npm run build && npm run build:frontend"
  },
  "dependencies": {
    "@apollo/federation": "^0.38.1",
    "@apollo/gateway": "^2.5.0",
    "@apollo/server": "^4.9.0",
    "@apollo/subgraph": "^2.5.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/websockets": "^11.0.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/simple-peer": "^9.11.8",
    "apollo-server-express": "^3.12.0",
    "aws-sdk": "^2.1400.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dataloader": "^2.2.2",
    "express-rate-limit": "^7.1.0",
    "ffmpeg-static": "^5.1.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "graphql": "^16.8.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^16.0.2",
    "graphql-ws": "^5.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.0",
    "lru-cache": "^11.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "pulsar-client": "^1.8.0",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "simple-peer": "^9.11.1",
    "uuid": "^9.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@faker-js/faker": "^8.3.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@nestjs/testing": "^11.1.3",
    "@pact-foundation/pact": "^12.1.0",
    "@playwright/test": "^1.40.0",
    "@stryker-mutator/core": "^7.3.0",
    "@stryker-mutator/jest-runner": "^7.3.0",
    "@stryker-mutator/typescript-checker": "^7.3.0",
    "@types/compression": "^1.7.0",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/sinon": "^17.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
